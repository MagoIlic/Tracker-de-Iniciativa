<div id="combat-list">
    </div>

<script>
    const peer = new Peer();
    let activeConn;

    function connectToMaster() {
        const id = document.getElementById('join-id').value.trim();
        if (!id) return;
        
        activeConn = peer.connect(id, { reliable: true });

        activeConn.on('open', () => {
            document.querySelector('button').innerText = "‚úîÔ∏è";
            document.querySelector('button').style.background = "#27ae60";
        });

        activeConn.on('data', (data) => {
            document.getElementById('round').innerText = data.round;
            renderMobileList(data.combatants);
        });
    }

    function renderMobileList(combatants) {
        const list = document.getElementById('combat-list');
        list.innerHTML = '';

        combatants.forEach(c => {
            const card = document.createElement('div');
            card.className = `combatant-card ${c.isActive ? 'active' : ''} ${c.isDead ? 'dead' : ''}`;

            // L√≥gica de salud simplificada para monstruos
            let healthDisplay = "";
            if (!c.isPlayer) {
                const percent = c.maxHp > 0 ? (c.currentHp / c.maxHp) * 100 : 100;
                let color = "#27ae60";
                if (percent < 10) color = "#000";
                else if (percent < 50) color = "#ff4d4d";
                else if (percent < 100) color = "#f1c40f";

                healthDisplay = `
                    <div class="hp-status">
                        <span class="dmg-val">-${c.damageTaken} HP</span>
                        <span style="color:${color}; font-size: 0.7rem;">‚óè Estado</span>
                    </div>
                `;
            }

            card.innerHTML = `
                <div class="info-main">
                    <div class="name">${c.name}</div>
                    <div class="status-dots">
                        <div class="dot ${c.checks.r ? 'active-r' : ''}"></div>
                        <div class="dot ${c.checks.c ? 'active-c' : ''}"></div>
                        <div class="dot ${c.checks.a ? 'active-a' : ''}"></div>
                        <div class="dot ${c.checks.d ? 'active-d' : ''}"></div>
                    </div>
                    <div class="tags-row">
                        ${c.tags.conditions.map(t => `<span class="mini-tag cond">${t}</span>`).join('')}
                        ${c.tags.effects.map(t => `<span class="mini-tag eff">${t}</span>`).join('')}
                    </div>
                </div>
                ${healthDisplay}
            `;
            list.appendChild(card);
        });
    }
</script>

